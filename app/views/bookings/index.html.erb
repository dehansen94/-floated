

<div class="container">
  <h1>Booked floats</h1>
  <div class="row">

    <% @bookings.each do |booking| %>
      <% if booking.end_date >= Date.today %>
        <div class="col-3">
          <div class="card-dina my-3">
            <div class="f-lex justify-content-center card-img-div" style="text-align: center">
              <%= cl_image_tag booking.floatdevice.photo.key %>
            </div>

            <div class="card-dina-infos">
              <div>
                <h2><%= booking.floatdevice.name %></h2>
                <p> The owner is <%= booking.floatdevice.user.name %></p>
                <p><%= booking.start_date %> - <%= booking.end_date %></p>
                <%# <button type="button" class="btn btn-primary">Cancel</button> %>
                <%= link_to "Cancel", booking_path(booking), method: :delete, class:"btn btn-primary" %>
              </div>

            </div>
            </div>
      </div>
      <% end %>
    <% end %>

  </div>

</div>


